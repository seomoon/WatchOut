<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    android:orientation="vertical"
    tools:context="com.example.ise.watchout.setting.ChangePass">

    <!--  상단바  -->
    <RelativeLayout
        android:id="@+id/rl_toolbar_setting"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@color/navy">

        <!--  아이콘  -->
        <ImageView
            android:id="@+id/changepwImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/changepw_icon" />

        <!--   설정 글씨  -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/changepwImg"
            android:layout_toRightOf="@+id/changepwImg"
            android:src="@drawable/changepw" />
    </RelativeLayout>

    <!-- 상단바 아래의 밑줄  -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/changepw_bg" />


    <!--  현재 비밀번호 -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp">

        <ImageView
            android:id="@+id/pw"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:src="@drawable/changepw_now" />

        <EditText
            android:textColor="#ffffff"
            android:id="@+id/nowpw"
            android:layout_width="160dp"
            android:layout_height="33dp"
            android:layout_toRightOf="@+id/pw"
            android:layout_marginLeft="10dp"
            android:background="@drawable/changepw_new_bg" />
    </RelativeLayout>

    <!--  새 비밀번호  -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/changepwbtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:src="@drawable/changepw_new" />

        <EditText
            android:textColor="#ffffff"
            android:id="@+id/newpw"
            android:layout_width="160dp"
            android:layout_height="33dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/changepwbtn"
            android:background="@drawable/changepw_new_bg" />
    </RelativeLayout>

    <!--  새 비밀번호 확인  -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logoutbtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:src="@drawable/changepw_new_check" />

        <EditText
            android:textColor="#ffffff"
            android:id="@+id/checknewpw"
            android:layout_width="160dp"
            android:layout_height="33dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/logoutbtn"
            android:background="@drawable/changepw_new_bg" />
    </RelativeLayout>

    <!--  변경확인 버튼  -->
    <ImageView
        android:id="@+id/setchangeok"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:src="@drawable/changepw_check" />

</LinearLayout>