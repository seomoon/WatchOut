<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.ise.watchout.login.JoinChildActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_white"
        android:layout_weight="0.53" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="76dp"
            android:layout_height="33dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="2.65"
            android:src="@drawable/join_id" />

        <EditText
            android:id="@+id/joinID"
            android:layout_width="180dp"
            android:layout_height="21dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.14"
            android:background="@drawable/join_id_bg"
            android:ems="8"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="51dp"
            android:id="@+id/idCheck"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="중복"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="76dp"
            android:layout_height="33dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/join_pw"
            android:layout_weight="0.28" />

        <EditText
            android:id="@+id/joinPW"
            android:layout_width="180dp"
            android:layout_height="21dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/join_id_bg"
            android:ems="8"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="76dp"
            android:layout_height="33dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/join_pw1"
            android:layout_weight="0.28" />

        <EditText
            android:id="@+id/joinPW_check"
            android:layout_width="180dp"
            android:layout_height="21dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/join_id_bg"
            android:ems="8"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="76dp"
            android:layout_height="33dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/join_phone"
            android:layout_weight="0.28" />

        <EditText
            android:id="@+id/joinPhone"
            android:layout_width="180dp"
            android:layout_height="21dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/join_id_bg"
            android:textColorHint="#ffffff"
            android:hint=" - 를 입력해주세요 "
            android:ems="8"
            android:textColor="#ffffff" />
    </LinearLayout>


    <ImageView
        android:id="@+id/joinChildok"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/pw_find_ok" />

</LinearLayout>
