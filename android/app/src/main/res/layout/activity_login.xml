<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.ise.watchout.login.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo_white"
        android:layout_weight="0.03" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:src="@drawable/id" />

        <EditText
            android:id="@+id/editID"
            android:layout_width="223dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/join_id_bg"
            android:ems="8"
            android:hint="ID"
            android:textColor="#ffffff"
            android:textColorHint="#BDBDBD" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:src="@drawable/pw" />

        <EditText
            android:id="@+id/editPW"
            android:layout_width="223dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/join_id_bg"
            android:hint="PASSWORD"
            android:textColorHint="#BDBDBD"
            android:ems="8"
            android:inputType="textPassword"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자동로그인"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:buttonTint="#ffffff"
            android:id="@+id/autoCheck"/>

    </LinearLayout>

    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/loginBtn"
        android:layout_marginTop="50dp"
        android:layout_width="303dp"
        android:layout_height="35dp"
        android:src="@drawable/login"
        android:layout_weight="0.06" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/idFindBtn"
            android:layout_width="123dp"
            android:layout_height="15dp"
            android:src="@drawable/id_find" />

        <ImageView
            android:id="@+id/pwFindBtn"
            android:layout_width="123dp"
            android:layout_height="15dp"
            android:src="@drawable/pw_find" />

        <ImageView
            android:id="@+id/joinBtn"
            android:layout_width="123dp"
            android:layout_height="15dp"
            android:src="@drawable/join" />

    </LinearLayout>

</LinearLayout>
